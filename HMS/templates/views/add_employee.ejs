<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
  <%- include('includes/navbar') %>

  <section class="main">
    <!-- Add Employee content -->
    <div class="add-emp-content">
      <form action="/admin/employee/add" method="post" id="add_emp_form">
        <div class="container-fluid p-3 bg-white rounded-2">
          <h2>Add Employee Details</h2>

          <div class="add-emp-container">
            <div class="row mt-4">
              <!-- name and number -->
              <div class="col-lg-6 m-0">
                <label for="emp_name">Full Name</label><br />

                <input type="text" placeholder="Employee Name" class="form-control rounded-4" id="emp_name" name="full_name" />
              </div>

              <div class="col-lg-6 m-0">
                <label for="emp_mail_id">Email</label><br />

                <input type="email" placeholder="Email ID" class="form-control rounded-4" id="emp_mail_id" name="email" />
              </div>
            </div>

            <div class="row mt-4">
              <!-- Contact, DOB and gender -->
              <div class="col-lg-4 m-0">
                <label for="emp_contact_number">Contact Details</label><br />

                <input class="form-control rounded-4" type="text" minlength="10" maxlength="10" aria-label="Contact Number" id="emp_contact_number" placeholder="Contact Number" name="contact_number" />
              </div>
              <div class="col-lg-4 m-0">
                <label for="emp_dob">Date of Birth</label><br />

                <input type="date" class="form-control rounded-4" id="emp_dob" name="date_of_birth" />
              </div>

              <div class="col-lg-4">
                <label for="emp_gender">Gender</label><br />

                <select class="form-select rounded-4" aria-label="Gender" name="gender">
                  <option selected>------Select------</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>

            <!-- age address & pincode -->
            <div class="row mt-4">
              <div class="col-lg-4 m-0">
                <label for="emp_age">Age</label><br />

                <input type="Number" class="form-control rounded-4" aria-label="Age" id="emp_age" placeholder="Employee's Age" name="age" />
              </div>

              <div class="col-lg-4 m-0">
                <label for="emp_address">Address</label><br />

                <input type="text" class="form-control rounded-4" aria-label="Address" id="emp_address" placeholder="Employee's Address" name="address" />
              </div>

              <div class="col-lg-4 m-0">
                <label for="emp_pincode">Pincode</label><br />

                <input type="number" minlength="6" class="form-control rounded-4" id="emp_pincode" placeholder="Area pincode" name="pincode" />
              </div>
            </div>

            <hr />

            <!-- ID no., Department & Position -->
            <div class="row mt-4">
              <div class="col-lg-4">
                <label for="emp_id_num">Employee ID</label><br />

                <input type="text" id="emp_id_num" class="form-control rounded-4" aria-label="ID" placeholder="ID No." name="employee_id" />
              </div>

              <div class="col-lg-4 m-0">
                <label for="emp_dept">Department</label><br />

                <select class="form-select rounded-4" aria-label="Department" id="emp_dept" name="department">
                  <option selected>------Select------</option>
                  <option value="Administration">Administration</option>
                  <option value="Nursing">Nursing</option>
                  <option value="Pharmacy">Pharmacy</option>
                  <option value="Laboratory">Laboratory</option>
                  <option value="Medical Records">Medical Records</option>
                  <option value="Maintenance and Housekeeping">Maintenance and Housekeeping</option>
                </select>
              </div>

              <div class="col-lg-4">
                <label for="emp_pos">Postion</label><br />

                <input type="text" id="emp_pos" class="form-control rounded-4" aria-label="Position" placeholder="Employee Position" name="position" />
              </div>
            </div>

            <!-- Qualification & Experience-->
            <div class="row mt-4">
              <div class="col-lg-6">
                <label for="emp_qualifi">Qualification</label><br />

                <select class="form-select rounded-4" aria-label="Qualification" name="qualification">
                  <option value="" selected>------Select------</option>
                  <option value="12th Pass">12th Pass</option>
                  <option value="Diploma or Equivalent">Diploma or Equivalent</option>
                  <option value="Graduate">Graduate</option>
                  <option value="Post Graduate">Post Graduate</option>
                </select>
              </div>

              <div class="col-lg-6 m-0">
                <label for="emp_exp">Years of Experience</label><br />

                <input type="number" class="form-control rounded-4" id="emp_exp" name="experience" />
              </div>
            </div>

            <hr>


            <!-- profile picture and additional notes  -->
            <div class="row mt-4 mb-5">
              <div class="col-lg-6 m-0">
                <label for="emp_addition_notes">Additional Notes</label><br />

                <textarea class="form-control rounded-4" aria-label="Additional Notes" id="emp_addition_notes" placeholder="Any additional notes..." name="notes"></textarea>
              </div>

              <div class="col-lg-6 m-0">
                <label for="emp_pic">Profile Picture</label><br />

                <input type="file" class="form-control rounded-4" id="emp_pic" name="pic">
              </div>
            </div>

            <!-- create and reset buttons -->
            <div class="row d-flex align-items-center justify-content-center mt-4 mb-4">
              <button type="submit" class="btn btn-primary col-lg-2 m-2">
                Add
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>

  <!-- bootstrap cdn -->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- sweet alert cdn -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

  <!-- Main js file -->
  <script defer src="/js/admin.js"></script>
</body>

</html>