<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
  <% if (userType === 'admin') { %>
  <%- include('includes/navbar') %>
  <% }else if (userType === 'doctor') { %>
  <%- include('includes/doc_navbar') %>
  <% } %>

  <section class="main">
    <div>
      <!-- Add patient vitals section -->
      <form action="/<%= userType %>/patient/vitals/<%= lab.id %>?_method=PATCH" method="post" id="new_pat_vital">
        <div class="container-fluid p-3 bg-white rounded-2">
          <h2 class="mt2">Update Patient Vitals</h2>

          <div class="pat-vital-form-container">
            <!-- name and ailment -->
            <div class="row mt-4">
              <div class="col-lg-6 m-0">
                <label for="pat_vital_name">Patient Name</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_name" placeholder="Name" value="<%= lab.name %>" readonly />
              </div>

              <div class="col-lg-6 m-0">
                <label for="pat_vital_ailment">Patient Ailment</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_ailment" placeholder="Ailment" value="<%= lab.ailment %>" readonly />
              </div>
            </div>

            <!-- ID section-->
            <div class="row mt-4">
              <div class="m-0">
                <label for="pat_vital_id">Patient ID</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_id" placeholder="ID no." value="<%= lab.patient_id %>" readonly />
              </div>
            </div>

            <hr />

            <!-- Heart rate, blood pressure and temperature -->
            <div class="row mb-4">
              <!-- Heart Rate (Pulse) -->
              <div class="m-0 col-lg-4">
                <label for="pat_vital_pulse">Heart Rate (Pulse)</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_pulse" placeholder="Beats per minute (bpm)" value="<%= lab.heart_rate %>" name="hr" />
              </div>

              <!-- Blood Pressure -->
              <div class="m-0 col-lg-4">
                <label for="pat_vital_bp">Blood Pressure</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_bp" placeholder="Millimeters of mercury (mmHg)" value="<%= lab.blood_pressure %>" name="bp" />
              </div>

              <!-- Temperature -->
              <div class="m-0 col-lg-4">
                <label for="pat_vital_temp">Temperature</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_temp" placeholder="Degrees Fahrenheit (Â°F)" value="<%= lab.temperature %>" name="temp" />
              </div>
            </div>

            <!-- Respiratory Rate, Oxygen Saturation (SpO2) -->
            <div class="row">
              <!-- Respiratory Rate -->
              <div class="m-0 col-lg-6">
                <label for="pat_vital_resp">Respiratory Rate</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_resp" placeholder="Breaths per minute (bpm)" value="<%= lab.resp_rate %>" name="resp" />
              </div>

              <!-- Oxygen Saturation (SpO2) -->
              <div class="m-0 col-lg-6">
                <label for="pat_vital_spo2">Oxygen Saturation (SpO2)</label><br />

                <input type="text" class="form-control rounded-4" id="pat_vital_spo2" placeholder="Percentage (%)" value="<%= lab.oxygen_sat %>" name="spo2" />
              </div>
            </div>

            <!-- Add lab test button -->
            <div class="row d-flex align-items-center justify-content-center mt-4 mb-4">
              <button type="submit" class="btn btn-primary col-lg-2">
                Update
              </button>

              <a href="/<%= userType %>/patient/vitals" class="btn btn-secondary col-lg-2 m-2" id="cancel_btn">
                Cancel
              </a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>

  <!-- bootstrap cdn -->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- sweet alert cdn -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

  <!-- Main js file -->
  <script defer src="/js/admin.js"></script>
</body>

</html>