<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
  <%- include('includes/navbar') %>

  <section class="main">
    <div class="container-fluid p-4">
      <!-- doctor profile content -->
      <div class="doc-profile bg-white rounded-2">
        <div class="doc-profile-close-btn me-4 mt-3">
          <a href="/admin/doctor/q"><i class="fa-solid fa-xmark text-secondary"></i></a>
        </div>
        <div class="p-4">
          <div class="top-sec d-flex">
            <div class="doc-img-container d-flex justify-content-center align-items-center">
              <img src="/uploads/<%= doctor.avatar %>" onerror="this.onerror=null; this.src='/Assets/pngwing.com.png'" />
            </div>

            <div class="flex-grow-1 ms-4">
              <div class="row p-4 pb-2">
                <h2>PROFILE</h2>
                <h1>
                  Dr.
                  <span id="doc_profile_name"><%= doctor.full_name %></span>
                </h1>
                <p class="m-0 mb-2">
                  <span id="doc_profile_id"><%= doctor.doc_id %></span>
                </p>
                <p class="m-0 mb-2">
                  <span id="doc_profile_qual"><%= doctor.qualification %></span>
                </p>
              </div>

              <div class="sec-profile-row p-4 d-flex">
                <div class="sec-profile-row-content">
                  <h2>Specialty</h2>
                  <h2>Experiences</h2>
                  <h2>Languages</h2>
                  <h2>Status</h2>
                </div>
                <div class="sec-profile-row-content ms-4">
                  <p>
                    <span id="doc_profile_specialty"><%= doctor.specialty %></span>
                  </p>
                  <p>
                    <span id="doc_profile_exp"><%= doctor.experience %> Yrs</span>
                  </p>
                  <p>English, Hindi</p>
                  <p>
                    <span id="doc_profile_status" class="doc-status p-1 rounded-3 text-white"><%= doctor.status %></span>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="bot-sec d-flex">
            <div class="left-bot-sec col-lg-6">
              <div class="row p-4 pb-2">
                <h2>Bio</h2>
                <p><span id="doc_profile_bio"><%= doctor.bio %></span></p>
              </div>

              <div class="row p-4">
                <h2>Additional notes</h2>
                <p>
                  <span id="doc_profile_notes" class="">
                    <% let arr = doctor.notes.split(".");
                    for(item of arr){ %>
                    <li><%= item %></li>
                    <% } %>
                  </span>
                </p>
              </div>
            </div>

            <div class="right-bot-sec col-lg-6">
              <div class="row p-4 d-flex">
                <h2 class="mb-3">Personal details</h2>
                <div class="doc-profile-details">
                  <div class="row ps-4 mb-4">
                    <p>
                      <span id="doc_profile_email"><%= doctor.email %></span>
                    </p>
                    <p>
                      <span id="doc_profile_contact"><%= doctor.contact_number %></span>
                    </p>
                    <p><span id="doc_profile_dob"><%= doctor.dob.toLocaleDateString() %></span></p>
                  </div>

                  <div class="row ps-4">
                    <p>
                      <span id="doc_profile_address"><%= doctor.address %></span>
                    </p>
                    <p>
                      <span id="doc_profile_pincode"><%= doctor.pincode %></span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- bootstrap cdn -->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- Main js file -->
  <script defer src="/js/admin.js"></script>
</body>

</html>