<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
  <% if (userType === 'admin') { %>
  <%- include('includes/navbar') %>
  <% }else if (userType === 'doctor') { %>
  <%- include('includes/doc_navbar') %>
  <% } %>

  <section class="main">
    <!-- Update Appointment Form -->
    <form action="#" id="update_app_form">
      <div class="container-fluid p-3 bg-white rounded-2">
        <h2 class="mt-2">Update Appointment</h2>

        <div class="update-app-form-container">
          <div class="row mt-4">
            <!-- name, email and number -->
            <div class="col-lg-4 m-0">
              <label for="update_patient_name">Patient's Name</label><br />

              <input type="text" placeholder="Name of the patient" class="form-control rounded-4" id="update_patient_name" value="<%= app.patient_name %>" />
            </div>

            <div class="col-lg-4 m-0">
              <label for="update_patient_email">Patient Email</label><br />

              <input type="email" placeholder="Email Address" class="form-control rounded-4" id="update_patient_email" value="<%= app.patient_email %>" />
            </div>

            <div class="col-lg-4 m-0">
              <label for="update_patient_contact_number">Contact Details</label><br />

              <input type="text" maxlength="10" minlength="10" placeholder="Contact number" class="form-control rounded-4" id="update_patient_contact_number" value="<%= app.contact_number %>" />
            </div>
          </div>

          <!-- DOB, age and gender -->
          <div class="row mt-4">
            <div class="col-lg-4 m-0">
              <label for="update_patient_dob">Date of Birth</label><br />

              <input type="date" class="form-control rounded-4" id="update_patient_dob" value="<%= app.date_of_birth %>" />
            </div>

            <div class="col-lg-4 m-0">
              <label for="update_patient_age">Age</label><br />

              <input class="form-control rounded-4" type="number" aria-label="Age" id="update_patient_age" placeholder="Patient's age" value="<%= app.age %>" />
            </div>

            <div class="col-lg-4">
              <label for="update_patient_gender">Gender</label><br />
              <select class="form-select rounded-4" aria-label="Gender" id="update_patient_gender">
                <option value="" disabled>------Select------</option>
                <option value="male" <%= app.gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="female" <%= app.gender === 'Female' ? 'selected' : '' %>>Female</option>
                <option value="other" <%= app.gender === 'Other' ? 'selected' : '' %>>Others</option>
              </select>
            </div>

          </div>

          <!-- address & pincode -->
          <div class="row mt-4">
            <div class="col-lg-6 m-0">
              <label for="update_patient_address">Address</label><br />

              <textarea class="form-control rounded-4" aria-label="Address" id="update_patient_address" placeholder="Patient's Address"><%= app.address %></textarea>
            </div>

            <div class="col-lg-6 m-0">
              <label for="update_patient_pincode">Pincode</label><br />

              <input type="number" minlength="6" class="form-control rounded-4" id="update_patient_pincode" placeholder="Area pincode" value="<%= app.pincode %>" />
            </div>
          </div>

          <hr />

          <!-- doctor and date -->
          <div class="row mt-4">
            <div class="col-lg-6">
              <label for="update_appointment_doc_name">Preferred Doctor</label><br />
              <select class="form-select rounded-4" id="update_appointment_doc_name" aria-label="Preferred Doctor">
                <option value="" disabled selected>------Select------</option>
                <% for(doc of doctors){ %>
                <option value="<%= doc.full_name %>" <%= app.preferred_doctor === doc.full_name ? 'selected' : '' %>>
                  <%= doc.full_name %> (<%= doc.specialty %>)
                </option>
                <% } %>
              </select>
            </div>


            <div class="col-lg-6 m-0">
              <label for="update_appointment_date_time">Preferred Date and Time</label><br />

              <input type="datetime-local" class="form-control rounded-4" id="update_appointment_date_time" value="<%= app.preferred_date_time %>" />
            </div>
          </div>

          <!-- reason and additional notes -->
          <div class="row mt-4">
            <div class="col-lg-6 m-0">
              <label for="update_appointment_reason">Appointment Reason</label><br />

              <textarea class="form-control rounded-4" aria-label="Appointment Reason" id="update_appointment_reason" placeholder="Reason for appointment..."><%= app.appointment_reason %></textarea>
            </div>

            <div class="col-lg-6 m-0">
              <label for="update_appointment_notes">Additional Notes</label><br />

              <textarea class="form-control rounded-4" aria-label="Additional Notes" id="update_appointment_notes" placeholder="Any additional notes..."><%= app.additional_notes  %></textarea>
            </div>
          </div>

          <!-- appointment status  -->
          <div class="row mt-3 mb-5">
            <div class="col-lg-6">
              <label for="update_app_status">Status</label><br />

              <select class="form-select rounded-4" aria-label="Status" id="update_app_status">
                <option value="" disabled>------Select------</option>
                <option value="complete" <%= app.status === 'Complete' ? 'selected' : '' %>>Completed</option>
                <option value="pending" <%= app.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="cancel" <%= app.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
              </select>
            </div>
          </div>

          <!-- create and reset buttons -->
          <div class="row d-flex align-items-center justify-content-center mt-4 mb-4">
            <button type="submit" class="btn btn-primary col-lg-2 m-2">
              Update
            </button>

            <a href="/<%= userType %>/appointment/manage" class="btn btn-secondary col-lg-2 m-2" id="cancel_btn">

              Cancel
            </a>
          </div>
        </div>
      </div>
    </form>
  </section>

  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- sweet alert cdn -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

  <script defer src="/js/admin.js"></script>
</body>

</html>