<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
  <% if (userType === 'admin') { %>
  <%- include('includes/navbar') %>
  <% }else if (userType === 'doctor') { %>
  <%- include('includes/doc_navbar') %>
  <% } %>

  <section class="main">
    <!-- Update Pharmaceutical content -->
    <form action="#" id="update_pharma_form">
      <div class="container-fluid p-3 bg-white rounded-2">
        <div class="update-pharma-heading d-flex justify-content-between pt-2 pb-3">
          <h2>Update Pharmaceuticals</h2>
        </div>

        <!-- pharma name and quantity section -->
        <div class="row mb-4">
          <div class="col-lg-6 m-0">
            <label for="update_pharma_name">Pharmaceutical Name</label><br />

            <input type="text" class="form-control rounded-4" id="update_pharma_name" value="<%= pharma.pharmaceutical_name %>" />
          </div>

          <div class="col-lg-6 m-0">
            <label for="update_pharma_quant">Pharmaceutical Quantity(Cartons)</label><br />

            <input type="number" placeholder="Quantity in Cartons" class="form-control rounded-4" id="update_pharma_quant" value="<%= pharma.quantity_cartons %>" />
          </div>
        </div>

        <!-- pharma category and vendor selection -->
        <div class="row mb-4">
          <div class="col-lg-6 m-0">
            <label for="update_pharma_category">Pharmaceutical Category</label><br />

            <select class="form-control rounded-4" id="update_pharma_category">
              <option disabled>------Select------</option>
              <option <%= pharma.pharmaceutical_category === 'Analgesics' ? 'selected' : '' %>>Analgesics</option>
              <option <%= pharma.pharmaceutical_category === 'Antibiotics' ? 'selected' : '' %>>Antibiotics</option>
              <option <%= pharma.pharmaceutical_category === 'Hormonal medications' ? 'selected' : '' %>>Hormonal medications</option>
              <option <%= pharma.pharmaceutical_category === 'Vaccines' ? 'selected' : '' %>>Vaccines</option>
            </select>
          </div>

          <div class="col-lg-6 m-0">
            <label for="update_pharma_vendor">Pharmaceutical Vendor</label><br />

            <select class="form-control rounded-4" id="update_pharma_vendor">
              <option disabled>------Select------</option>
              <option <%= pharma.pharmaceutical_vendor === 'PharmaSolutions' ? 'selected' : '' %>>PharmaSolutions</option>
              <option <%= pharma.pharmaceutical_vendor === 'MedVista Pharmaceuticals' ? 'selected' : '' %>>MedVista Pharmaceuticals</option>
              <option <%= pharma.pharmaceutical_vendor === 'Apex Pharma Solutions' ? 'selected' : '' %>>Apex Pharma Solutions</option>
              <option <%= pharma.pharmaceutical_vendor === 'PharmaGlobe' ? 'selected' : '' %>>PharmaGlobe</option>
            </select>
          </div>
        </div>

        <!-- Barcode Number -->
        <div class="row m-0 mb-4">
          <label for="update_pharm_bc_num" class="p-0">Pharmaceutical Barcode</label>
          <input type="text" placeholder="Barcode Number" class="form-control rounded-4" id="update_pharm_bc_num" value="<%= pharma.pharmaceutical_barcode %>" />
        </div>

        <!--category description -->
        <div class="row">
          <label for="update_pharm_cat_desc">Pharmaceutical Category Description</label>
          <div id="update_pharm_cat_desc">
            <%= pharma.pharmaceutical_category_description %>
          </div>
        </div>

        <!-- add category button -->
        <div class="row d-flex align-items-center justify-content-center mt-4 mb-4">
          <button type="submit" class="btn btn-primary col-lg-2 m-2">
            Update
          </button>
          <a href="/<%= userType %>/pharmacy/manage" class="btn btn-secondary col-lg-2 m-2" id="cancel_btn">
            Cancel
          </a>
        </div>
      </div>
    </form>
  </section>

  <!-- bootstrap cdn -->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- quill editor cdn -->
  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.0-rc.5/dist/quill.js"></script>
  <script src="/js/quill.js"></script>
  <script>
    const pharm_editor = new Quill("#update_pharm_cat_desc", {
      modules: {
        toolbar: toolbarOptions,
      },
      theme: "snow",
    });
  </script>

  <!-- Main js file -->
  <script defer src="/js/admin.js"></script>
</body>

</html>